<html lang="en">
<%- include("./partials/header.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Books</h2>

    <% if (books.length > 0) { %>
      <% books.forEach(book => { %>
      <a class="single" href="/books/<%= book._id  %>">
        <h3 class="title"><%= book.Title %></h3>
      </a> 
      <% }) %>
    <% } else { %>
      <p>There are no books to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>